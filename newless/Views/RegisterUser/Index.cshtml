@model Entity.Concencrate.Writer

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Register</title>

    <link href="~/inspinia/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/inspinia/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/inspinia/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/inspinia/css/animate.css" rel="stylesheet">
    <link href="~/inspinia/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">KS</h1>

            </div>
            <h3>Register</h3>
            <p>Create account to see it in action.</p>
            @using (Html.BeginForm("Index", "RegisterUser", FormMethod.Post))
            {

                <div class="form-group">
                    @Html.TextBoxFor(x=>x.Name,new { @class="form-control"})
                    @Html.ValidationMessageFor(x=>x.Name,"",new { @class="text-danger"})
                    @*<input type="text" class="form-control" name="Name" asp-for="@Model.Name" placeholder="Ad Soyad">*@
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Email)
                    @Html.ValidationMessageFor(x => x.Email)

                    @*<input type="email" class="form-control" name="Email" asp-for="@Model.Email" placeholder="Email">*@
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>

                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Password)
                    @Html.ValidationMessageFor(x => x.Password)

                    @*<input type="password" class="form-control" name="Password" asp-for="@Model.Password" placeholder="Password">*@
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox"><i></i> Agree the terms and policy </label></div>

                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Register</button>

                <p class="text-muted text-center"><small>Already have an account?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="~/RegisterUser/Login/">Login</a>

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            }
            <p class="m-t"> <small>Asp.Net Core 5.0 &copy; @DateTime.Now.Year</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/inspinia/js/jquery-3.1.1.min.js"></script>
    <script src="~/inspinia/js/popper.min.js"></script>
    <script src="~/inspinia/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="~/inspinia/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });</script>
</body>

</html>
