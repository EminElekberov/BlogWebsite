@using newless.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<RoleAssignViewModel>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-control">
            <input type="hidden" asp-for="@Model[i].RoleId" />
            <input type="hidden" asp-for="@Model[i].Name" />
            <input type="checkbox" class="form-check-input" asp-for="@Model[i].Exists" />
            <label class="form-check-label" for="@Model[i].Exists">@Model[i].Name</label>
        </div>
    }
    <button class="btn btn-info">Kaydet</button>
</form>
<a href="/Admin/AdminRole/UserRoleList" class="btn btn-primary">Listeye geri don</a>